{
  "name": "pull-release-notes-action",
  "version": "1.0.0",
  "private": true,
  "description": "A GitHub Action to generate a PR changelog between two refs.",
  "author": "Nikolay Blagoev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:nblagoev/pull-release-notes-action.git"
  },
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "keywords": [
    "actions",
    "changelog",
    "release-notes",
    "pull-request"
  ],
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@nblagoev/pull-release-notes": "^1.2.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^26.0.1",
    "jest-circus": "^26.0.1",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.2"
  }
}
